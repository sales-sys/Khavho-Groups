<style>
.auth-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #F37021 0%, #FFB366 100%);
    padding: 20px;
}

.auth-container {
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    padding: 60px;
    max-width: 500px;
    width: 100%;
    text-align: center;
    margin-top: 100px; /* Account for fixed header */
}

.auth-logo {
    width: 80px;
    height: 80px;
    margin: 0 auto 30px;
    border-radius: 50%;
    background: #F37021;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
}

.auth-title {
    font-size: 32px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 10px;
    font-family: 'Poppins', sans-serif;
}

.auth-subtitle {
    color: #666;
    margin-bottom: 40px;
    font-size: 16px;
}

.auth-form-group {
    margin-bottom: 25px;
    text-align: left;
}

.auth-form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #333;
    font-size: 14px;
}

.auth-form-group input {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid #e1e5e9;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.auth-form-group input:focus {
    outline: none;
    border-color: #F37021;
    box-shadow: 0 0 0 3px rgba(243, 112, 33, 0.1);
}

.auth-submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #F37021 0%, #FFB366 100%);
    color: white;
    border: none;
    padding: 18px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 20px;
}

.auth-submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(243, 112, 33, 0.3);
}

.auth-switch {
    color: #666;
    font-size: 14px;
}

.auth-switch a {
    color: #F37021;
    text-decoration: none;
    font-weight: 600;
}

.auth-switch a:hover {
    text-decoration: underline;
}

.error-message {
    background: #ffe6e6;
    color: #d63384;
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
    font-size: 14px;
}

.success-message {
    background: #e6ffe6;
    color: #198754;
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
    font-size: 14px;
}

@media (max-width: 768px) {
    .auth-container {
        padding: 40px 30px;
        margin-top: 80px;
    }
    
    .auth-title {
        font-size: 28px;
    }
}
</style>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-logo">
            <i data-lucide="user-plus"></i>
        </div>
        
        <h1 class="auth-title">Join Khavho Groups</h1>
        <p class="auth-subtitle">Create your account to access our services</p>
        
        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        
        <form id="registerForm" class="auth-form">
            <div class="auth-form-group">
                <label for="registerName">Full Name</label>
                <input type="text" id="registerName" name="name" autocomplete="name" required>
            </div>
            
            <div class="auth-form-group">
                <label for="registerEmail">Email Address</label>
                <input type="email" id="registerEmail" name="email" autocomplete="email" required>
            </div>
            
            <div class="auth-form-group">
                <label for="registerPassword">Password</label>
                <input type="password" id="registerPassword" name="password" autocomplete="new-password" required minlength="6">
            </div>
            
            <div class="auth-form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" autocomplete="new-password" required minlength="6">
            </div>
            
            <button type="submit" class="auth-submit-btn">
                <i data-lucide="user-plus"></i>
                Create Account
            </button>
        </form>
        
        <p class="auth-switch">
            Already have an account? 
            <a href="/login">Sign in here</a>
        </p>
        
        <p class="auth-switch">
            <a href="/">‚Üê Back to Home</a>
        </p>
    </div>
</div>

<script src="/js/auth/register.js"></script>